# ============================================================================
# Streamlit Secrets Configuration - TOML Format
# ============================================================================
# 
# This file demonstrates the TOML format for configuring LLM API keys
# and other sensitive information for the Streamlit application.
#
# IMPORTANT: 
# - For local development: Copy this to .streamlit/secrets.toml and add your keys
# - For Streamlit Cloud: Add these secrets in the app settings dashboard
# - NEVER commit secrets.toml to GitHub
# ============================================================================

# ============================================================================
# LLM PROVIDER CONFIGURATION
# ============================================================================

# Choose your LLM provider: "groq" or "openrouter"
llm_provider = "groq"

# ============================================================================
# GROQ API CONFIGURATION (Free & Fast)
# ============================================================================
# Get your API key from: https://console.groq.com
# 
# Steps:
# 1. Go to https://console.groq.com
# 2. Sign up or log in
# 3. Navigate to "API Keys"
# 4. Click "Create API Key"
# 5. Copy the key (starts with "gsk_")
# 6. Paste below

groq_api_key = "gsk_your_actual_api_key_here"

# ============================================================================
# OPENROUTER API CONFIGURATION (Premium & Flexible)
# ============================================================================
# Get your API key from: https://openrouter.ai
# 
# Steps:
# 1. Go to https://openrouter.ai
# 2. Sign up or log in
# 3. Navigate to "Keys"
# 4. Click "Create Key"
# 5. Copy the key (starts with "sk-or-")
# 6. Uncomment and paste below
#
# Uncomment the line below to use OpenRouter instead of Groq:
# openrouter_api_key = "sk-or-your_actual_api_key_here"

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

database_path = "restaurant-recommendation/phase-1-data-pipeline/data/restaurant.db"

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

[server]
# Port to run Streamlit on
port = 8501

# Address to bind to (0.0.0.0 for all interfaces)
address = "0.0.0.0"

# Run in headless mode (no browser)
headless = true

# Rerun script on file save
runOnSave = true

# Maximum upload size in MB
maxUploadSize = 200

# ============================================================================
# LOGGER CONFIGURATION
# ============================================================================

[logger]
# Log level: "debug", "info", "warning", "error"
level = "info"

# ============================================================================
# CLIENT CONFIGURATION
# ============================================================================

[client]
# Show detailed error messages
showErrorDetails = true

# Toolbar mode: "auto", "minimal", "viewer"
toolbarMode = "viewer"

# ============================================================================
# THEME CONFIGURATION
# ============================================================================

[theme]
# Primary color (hex format)
primaryColor = "#FF6B35"

# Background color
backgroundColor = "#FFFFFF"

# Secondary background color
secondaryBackgroundColor = "#F0F2F6"

# Text color
textColor = "#262730"

# Font: "sans serif", "serif", "monospace"
font = "sans serif"

# ============================================================================
# USAGE EXAMPLES
# ============================================================================
#
# EXAMPLE 1: Using Groq (Recommended)
# ============================================================================
# llm_provider = "groq"
# groq_api_key = "gsk_your_actual_key_here"
#
# EXAMPLE 2: Using OpenRouter
# ============================================================================
# llm_provider = "openrouter"
# openrouter_api_key = "sk-or-your_actual_key_here"
#
# EXAMPLE 3: Production Configuration
# ============================================================================
# llm_provider = "groq"
# groq_api_key = "gsk_your_actual_key_here"
# database_path = "/var/data/restaurant.db"
#
# [server]
# port = 8501
# address = "0.0.0.0"
# headless = true
# runOnSave = false
#
# [logger]
# level = "warning"
#
# [client]
# showErrorDetails = false
# toolbarMode = "minimal"
#
# ============================================================================
# SECURITY NOTES
# ============================================================================
#
# ✅ DO:
# - Store API keys in .streamlit/secrets.toml (local development)
# - Use Streamlit Cloud secrets for production
# - Never commit secrets.toml to GitHub
# - Rotate API keys regularly
# - Use environment-specific configurations
#
# ❌ DON'T:
# - Hardcode API keys in Python files
# - Commit secrets.toml to version control
# - Share API keys in chat or email
# - Use the same key for development and production
# - Store secrets in plain text files outside .streamlit/
#
# ============================================================================
# STREAMLIT CLOUD SETUP
# ============================================================================
#
# 1. Push code to GitHub (without secrets.toml)
# 2. Go to https://share.streamlit.io
# 3. Click on your app
# 4. Go to Settings → Secrets
# 5. Add your secrets in TOML format:
#
#    llm_provider = "groq"
#    groq_api_key = "gsk_your_actual_key_here"
#
# 6. Click Save
# 7. App automatically redeploys with new secrets
#
# ============================================================================
# DOCKER SETUP
# ============================================================================
#
# Run with environment variables:
# docker run -p 8501:8501 \
#   -e LLM_PROVIDER=groq \
#   -e GROQ_API_KEY=gsk_your_actual_key_here \
#   restaurant-recommender
#
# Or with Docker Compose:
# environment:
#   - LLM_PROVIDER=groq
#   - GROQ_API_KEY=gsk_your_actual_key_here
#
# ============================================================================
# TROUBLESHOOTING
# ============================================================================
#
# Issue: "Secret not found" error
# Solution:
# 1. Check .streamlit/secrets.toml exists
# 2. Verify key name is correct
# 3. Check TOML syntax is valid
# 4. Restart Streamlit
#
# Issue: API key not working
# Solution:
# 1. Verify key is correct (copy-paste carefully)
# 2. Check key hasn't expired
# 3. Verify key has correct permissions
# 4. Test key with provider's API directly
#
# Issue: TOML parsing error
# Solution:
# 1. Check TOML syntax (use https://www.toml-lint.com/)
# 2. Ensure quotes are correct
# 3. Check for special characters
# 4. Validate indentation
#
# ============================================================================
